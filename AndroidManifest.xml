<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.houseofslack.pullscoring"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="19" />
	
	<uses-feature android:name="android.hardware.screen.portrait"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="com.houseofslack.pullscoring.Splash"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.houseofslack.pullscoring.Rules"
			android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"/>
		<activity android:name="com.houseofslack.pullscoring.Scoring"
			android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"/>
		<activity android:name="com.houseofslack.pullscoring.About"
			android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"/>
	</application>

</manifest>
