<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>
	
	<!-- Main styles for the application -->
	<style name="SplashButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">@dimen/standard_button_height</item>
		<item name="android:layout_marginLeft">@dimen/splash_button_left_right_margins</item>
		<item name="android:layout_marginRight">@dimen/splash_button_left_right_margins</item>
		<item name="android:layout_marginTop">@dimen/splash_button_top_bottom_margins</item>
		<item name="android:layout_marginBottom">@dimen/splash_button_top_bottom_margins</item>
		<item name="android:textSize">@dimen/standard_button_text_size</item>
		<item name="android:background">@drawable/splash_button_background</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	<style name="AppText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@android:color/black</item>
	</style>
	<style name="AppHeader" parent="AppText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_marginTop">@dimen/rules_header_margin</item>
		<item name="android:layout_marginBottom">@dimen/rules_header_margin</item>
		<item name="android:textSize">@dimen/rules_header_text_size</item>
	</style>
	<style name="AppBody" parent="AppText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:textSize">@dimen/rules_body_text_size</item>
	</style>
	<style name="ScoreInput">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">0.35</item>
		<item name="android:layout_margin">@dimen/standard_margin</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/standard_button_text_size</item>
		<item name="android:clickable">true</item>
	</style>
	<style name="ScoreButtonRow">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/score_button_row_margin</item>
		<item name="android:layout_marginRight">@dimen/score_button_row_margin</item>
		<item name="android:orientation">horizontal</item>
	</style>
	<style name="ScoreInputButton">
		<item name="android:layout_height">@dimen/standard_button_height</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">0.25</item>
		<item name="android:layout_margin">@dimen/small_margin</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/standard_button_text_size</item>
	</style>
	<style name="TeamNameAndScore">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:textSize">@dimen/scoring_text_size</item>
	</style>
	<style name="Score">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textSize">@dimen/scoring_text_size</item>
	</style>
	<style name="FoulImage">
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">0.2</item>
		<item name="android:layout_margin">@dimen/small_margin</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:scaleType">centerInside</item>
		<item name="android:clickable">true</item>
	</style>
	<style name="HalfContainer">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">0.50</item>
	</style>
	<style name="ScoreContainer">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingLeft">@dimen/scrollbar_padding</item>
		<item name="android:paddingRight">@dimen/scrollbar_padding</item>
	</style>
</resources>
